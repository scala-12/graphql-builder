{
  "name": "apollo-graphql-builder",
  "version": "4.0.0",
  "description": "A lightweight TypeScript utility for generating typed GraphQL queries and mutations with Apollo Client.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 0",
    "prepare": "npm run build",
    "prepublishOnly": "echo \"npm test && npm run lint\" && exit 0",
    "preversion": "echo \"npm run lint\" && exit 0",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier src/**/*.ts"
  },
  "author": {
    "name": "Vlad Kalashnikov",
    "email": "spotless.quash@gmail.com",
    "url": "https://github.com/scala-12"
  },
  "license": "MIT",
  "keywords": [
    "graphql",
    "apollo",
    "builder",
    "typescript",
    "schema",
    "queries",
    "mutations",
    "typed",
    "graphql-tools"
  ],
  "devDependencies": {
    "@apollo/client": "^3.10.6",
    "graphql-light-builder": "^0.3.2",
    "prettier": "^3.5.1",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "@apollo/client": "^3.10.6",
    "graphql-light-builder": "^0.3.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scala-12/graphql-builder.git",
    "directory": "ts-apollo-graphql-builder"
  },
  "bugs": {
    "url": "https://github.com/scala-12/graphql-builder/issues",
    "email": "spotless.quash+github@gmail.com"
  },
  "homepage": "https://github.com/scala-12/graphql-builder/tree/main/ts-apollo-graphql-builder#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
